@using FribergCarRental.Areas.Admin.Models
@model AdminBookingViewModel

@{
    ViewData["Title"] = "Redigera";
}

<h1>Redigera</h1>

<h4>Bokning</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CarId" class="control-label">Modell</label>
                <select asp-for="CarId" class="form-control" asp-items="Model.Cars"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Kund</label>
                <select asp-for="UserId" class="form-control" asp-items="Model.Users"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input type="date" class="form-control" name="StartDate" id="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input type="date" class="form-control" name="EndDate" id="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="TotalCost" class="control-label">Total kostnad</label>
                <input disabled class="form-control" id="TotalCost" />
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka</a>
</div>

@section Scripts {
    @await Html.PartialAsync("~/Views/Shared/Partials/_AdminCreateBookingScripts.cshtml");
}